@model IEnumerable<CourseReg3.Models.Students>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Students</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Students" asp-action="Create" class="btn btn-primary">Create a new Student</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:30%">
            <thead>
                <tr>
                    <th>
                        FirstName
                    </th>
                    <th>
                        LastName
                    </th>
                    <th>
                        EmailAddress
                    </th>
                    <th>
                        PhoneNumber
                    </th>
                    <th>
                        CourseName
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var students in Model)
                {
                <tr>
                    <td width="10%">@students.FirstName</td>
                    <td width="10%">@students.LastName</td>
                    <td width="10%">@students.EmailAddress</td>
                    <td width="10%">@students.PhoneNumber</td>
                    <td width="10%">@students.CourseName</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Students" asp-action="Update" asp-route-Id="@students.StudentId" class="btn btn-primary mx-1">Edit</a>
                            <a asp-controller="Students" asp-action="Delete" asp-route-Id="@students.StudentId" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Student registered yet</p>
    }

</div>


