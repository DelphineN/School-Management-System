@model CourseReg3.Models.Instructors

<form method="post" asp-action="Create">
    <div class="form-horizontal">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group">
            <h2 class="text-black-50 pl-3">Add an Instructor</h2>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <div class="col-md-10">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-md-10">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-md-10">
                        <label asp-for="EmailAddress"></label>
                    </div>
                    <div class="col-md-10">
                        <label asp-for="CourseName"></label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="EmailAddress" class="form-control" />
                    </div>
                    <div class="col-md-10">
                        <input asp-for="CourseName" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
     </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}