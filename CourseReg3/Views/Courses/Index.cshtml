@model IEnumerable<CourseReg3.Models.Courses>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Courses</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Courses" asp-action="Create" class="btn btn-primary">Create a new Course</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        CourseNumber
                    </th>
                    <th>
                        CourseName
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var courses in Model)
                {
                <tr>
                    <td width="30%">@courses.CourseNumber</td>
                    <td width="30%">@courses.CourseName</td>
                    <td width="30%">@courses.Description</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Courses" asp-action="Update" asp-route-Id="@courses.CourseId" class="btn btn-primary mx-1">Edit</a>
                            <a asp-controller="Courses" asp-action="Delete" asp-route-Id="@courses.CourseId" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>


